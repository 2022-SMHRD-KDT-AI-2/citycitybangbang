<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <View
        android:id="@+id/line"
        android:layout_width="270dp"
        android:layout_height="0.8dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="52dp"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="@+id/btnLogLogin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnLogLogin"
        app:layout_constraintTop_toBottomOf="@+id/btnLogLogin" />

    <EditText
        android:id="@+id/etLogId"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="아이디"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:paddingLeft="10dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/uvLogLogo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/uvLogLogo"
        app:layout_constraintTop_toBottomOf="@+id/uvLogLogo" />

    <Button
        android:id="@+id/btnLogLogin"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="18dp"
        android:backgroundTint="@color/blue_1"
        android:text="로그인"
        android:textSize="15sp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@+id/etLogPw"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etLogPw"
        app:layout_constraintTop_toBottomOf="@+id/etLogPw" />

    <Button
        android:id="@+id/btnLogMem"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="38dp"
        android:backgroundTint="@color/green"
        android:text="회원가입"
        android:textSize="15sp"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@+id/line"
        app:layout_constraintStart_toStartOf="@+id/line"
        app:layout_constraintTop_toBottomOf="@+id/line" />

    <EditText
        android:id="@+id/etLogPw"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:padding="5dp"
        android:paddingLeft="10dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/etLogId"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etLogId"
        app:layout_constraintTop_toBottomOf="@+id/etLogId" />

    <ImageView
        android:id="@+id/uvLogLogo"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <CheckBox
        android:id="@+id/cbLogSave"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:text="자동로그인"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/btnLogLogin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnLogLogin"
        app:layout_constraintTop_toBottomOf="@+id/btnLogLogin" />


</androidx.constraintlayout.widget.ConstraintLayout>