<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MemberActivity">

    <EditText
        android:id="@+id/etLogId3"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="아이디"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="446dp" />

    <Button
        android:id="@+id/btnLogLogin2"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/blue_1"
        android:text="로그인"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="290dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <CheckBox
        android:id="@+id/cbLogSave2"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_marginBottom="16dp"
        android:text="자동로그인"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="60dp" />

    <EditText
        android:id="@+id/etLogPw2"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:padding="5dp"
        android:paddingLeft="10dp"
        tools:layout_editor_absoluteX="88dp"
        tools:layout_editor_absoluteY="535dp" />

    <Button
        android:id="@+id/btnLogMem2"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/green"
        android:text="회원가입"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="609dp" />

    <View
        android:id="@+id/line2"
        android:layout_width="270dp"
        android:layout_height="0.8dp"
        android:layout_centerInParent="true"
        android:background="@color/gray" />

</androidx.constraintlayout.widget.ConstraintLayout>