<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    tools:context=".MainActivity">

    //툴바 여기부터//

    // 툴바 끝


    <!--추가한 부분-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:background="@color/blue_1"
            android:gravity="center"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:subtitleTextColor="#FFFFFF"
            app:titleTextColor="#FFFFFF"></androidx.appcompat.widget.Toolbar>

        <Button
            android:id="@+id/button4"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_marginTop="21dp"
            android:background="@drawable/button_grayradius"
            android:text="확인"
            android:textColor="#000000"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/map_view"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="@+id/map_view"
            app:layout_constraintTop_toBottomOf="@+id/textView20" />

        <RelativeLayout
            android:id="@+id/map_view"
            android:layout_width="369dp"
            android:layout_height="290dp"
            android:layout_marginTop="21dp"
            app:layout_constraintEnd_toEndOf="@+id/button2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/button" />

        <Button
            android:id="@+id/button2"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_marginEnd="21dp"
            android:background="@drawable/button_grayradius"
            android:text="현재 위치"
            android:textColor="#000000"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/button"
            app:layout_constraintTop_toTopOf="@+id/button"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="369dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:text="\송암로 11광주 광역시 남고 송암로 11광주 광역시 남고 송암로 11광주 광역시 남고 송암로 11광주 광역시 남고 송암로 1"
            android:textColor="#000000"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/map_view"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/map_view"
            app:layout_constraintTop_toBottomOf="@+id/map_view" />

        <Button
            android:id="@+id/button"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="43dp"
            android:background="@drawable/button_grayradius"
            android:text="주소 검색"
            android:textColor="#000000"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!---->

</RelativeLayout>